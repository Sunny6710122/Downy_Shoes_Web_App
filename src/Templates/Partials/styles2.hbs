
.container {
    width: 50%;
    background-color: whitesmoke;
    padding: 5px 20px 15px 20px;
    border: 1px solid gray;
    border-radius: 5px;
    margin: 50px;
    /* column-width: 20px; */
}
h1 {
    font-size: 80px;
}
.h2{
    font-size: 5px;
}
p{
    font-size:  30px;;
}
.header{
    padding: 50px;
    text-align: center;
    background-color: rgb(17 143 158);
    color: white;
    background-attachment:fixed;
}
input[type="number"],
input[type="text"],
input[type="file"],
select,
textarea {
    text-align: center;
    width: 95%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin: 5px;
}
input {
    font-size: larger;
}

.main_heading {
    padding-top: 10px;
	color: black;
	font-size: 40px;
	text-align: center;
}
input[type="submit"] {
    background-color: #4daea1;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    width: 95%;
}
label {
    font-family: 'Times New Roman', Times, serif;
    font-weight: bold;
    font-size: x-large;
}
input[type="submit"]:hover {
    background-color: #4caf84;
}