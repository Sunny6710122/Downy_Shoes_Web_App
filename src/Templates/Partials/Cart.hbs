/* Style cart items */
.cart-items {
    margin: 20px;
}

.cart-item {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    padding: 10px;
    margin: 10px 0;
}

.cart-item img {
    max-width: 100px;
    max-height: 100px;
    margin-right: 20px;
}

.item-details {
    flex-grow: 1;
}

.item-quantity {
    /* display: flex; */
    flex-direction: column;
    align-items: center;
    margin-right: 20px;
}

/* Style the Checkout button */
.checkout-button {
    text-align: center;
}

.checkout-btn {
    background-color: #007bff; /* Blue color */
    color: #fff; /* Text color */
    padding: 10px 20px;
    font-size: 18px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

/* Hover effect */
.checkout-btn:hover {
    background-color: #0056b3; /* Darker blue on hover */
}


